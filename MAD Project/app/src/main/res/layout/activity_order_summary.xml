<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/order_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_shop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop ID: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item ID: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Price: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order quantity: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/promotion_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_promotion_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Amount: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discount_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Amount: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#673AB7"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="18sp" />




</LinearLayout>
